  <!--main section-->
  <div class="container">
    <div class="row">
      <h1><%= title %></h1>
      <table class="table table-striped table primary" >
        <thead>
          <tr>
            <th>Company Name</th>
            <th>Job Type</th>
            <th>Location</th>
            <th>Payment</th>
            <th>Time Duration</th>
            <th>Apply</th>
          </tr>
        </thead>
          <% records.forEach(function(row){ %>
          <tr>
            <td><%= row.company_name %></td>
            <td><%= row.job_type %></td>
            <td><%= row.location %></td>
            <td><%= row.pay %></td>
            <td><%= row.time %></td>
            <td><button type="button" class="btn btn-primary"><a href="apply"><h4 style="font-size: 18px;">Apply</h4></a></button></td>
          </tr>
          <% }) %>
      </table>
    </div>
  </div>
	<div class="container" style="margin-left: 200px;">
    <div class="row">
      <div id="signupbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-6 col-sm-12 col-sm-offset-4">
        <div class="panel panel-info">
          <div class="panel-heading">
            <div class="panel-title"><h2><b>Company Details Form</b></h2></div><br>
            <div style="font-size: 85%; top: -10px;"></div>
          </div>  
          <div class="panel-body">
            <form action="/link" id="CompanyDetailsForm" class="form-horizontal" method="post"  role="form">

              <div id="signupalert" style="display:none" class="alert alert-danger">
                <p>Error:</p>
                <span></span>
              </div>
                            
              <div class="form-group">
                <label for="cname" class="col-md-6 control-label">Company Name</label>
                  <div class="col-md-12">
                    <input class="form-control" type="text" id="cname" name="cname" value=" " required placeholder="Enter company name">
                  </div>
              </div>
              
              <div class="form-group">
                <label for="type_of_job" class="col-md-6 control-label">Job Type</label>
                  <div class="col-md-12">
                    <select class="form-control" name="job">
                      <option value="null">-null-</option>
                      <option value="Transportation">Transportation</option>
                      <option value="Carpentering">Carpentering</optio >
                      <option value="Handcraft">Handcraft</option>
                      <option value="Painting">Painting</option>
                      <option value="Construction">Construction</option>
                      <option value="Househelp">Househelp</option>
                      <option value="Cooking">Cooking</option>
                      <option value="Weaving">Weaving</option>
                      <option value="Sewing">Sewing</option>
                    </select>
                  </div>
              </div>
              
              <div class="form-group">
                <label for="location" class="col-md-6 control-label">Location</label>
                  <div class="col-md-12">
                    <input class="form-control" type="text" id="loc" name="loc" value=" " required placeholder="Enter location of work">
                  </div>
              </div>
                        
              <div class="form-group">
                <label for="payment" class="col-md-6 control-label">Payment</label>
                  <div class="col-md-12">
                    <input class="form-control" type="text" id="payment" name="payment" value=" " required placeholder="Enter amount to be paid">
                  </div>
              </div>
                            
              <div class="form-group">
                <label for="time" class="col-md-6 control-label">Time Duration</label>
                  <div class="col-md-12">
                    <input class="form-control" type="text" id="time" name="time" value=" " required placeholder="Enter duration of work">
                  </div>
              </div>

              <div class="form-group">
                <!-- Button -->                                        
                <div class="col-md-offset-6 col-md-12">
                  <input type="submit" name="submit" value="submit" class="btn btn-primary">   
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>


